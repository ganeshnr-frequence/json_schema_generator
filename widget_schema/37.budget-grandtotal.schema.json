{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "label": {
            "type": "string"
        },
        "conversionDefaultRadius": {
            "type": "integer"
        },
        "conversionMaximumRadius": {
            "type": "integer"
        },
        "conversionMinimumRadius": {
            "type": "integer"
        },
        "conversionRadiusDefaults": {
            "type": "boolean"
        },
        "hasCustomPolygonConversion": {
            "type": "boolean"
        },
        "showConversionMaximumRadiusAlert": {
            "type": "boolean"
        },
        "showInfoIcon": {
            "type": "boolean"
        },
        "tooltipText": {
            "type": "string"
        },
        "layoutStyleConfig": {
            "type": "object",
            "properties": {
                "card": {
                    "type": "object",
                    "properties": {
                        "header": {
                            "type": "object",
                            "properties": {
                                "height": {
                                    "type": "string"
                                },
                                "lineHeight": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "height",
                                "lineHeight"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "header"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "card"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}