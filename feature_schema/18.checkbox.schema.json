{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "label": {
            "type": "string"
        },
        "group": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "id": {
                    "type": "string"
                }
            },
            "required": [
                "enabled",
                "id"
            ],
            "additionalProperties": false
        },
        "value": {
            "type": "boolean"
        },
        "relations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "match": {
                        "type": "string"
                    },
                    "when": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "id",
                                "value"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "who": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "id"
                            ],
                            "additionalProperties": false
                        }
                    }
                },
                "required": [
                    "match",
                    "when",
                    "who"
                ],
                "additionalProperties": false
            }
        },
        "type": {
            "type": "string"
        }
    },
    "additionalProperties": false
}