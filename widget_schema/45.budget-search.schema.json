{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "required": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                },
                "isRequired": {
                    "type": "boolean"
                }
            },
            "required": [
                "isRequired",
                "text"
            ],
            "additionalProperties": false
        },
        "validations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "message",
                    "type"
                ],
                "additionalProperties": false
            }
        },
        "label": {
            "type": "string"
        },
        "showImage": {
            "type": "boolean"
        }
    },
    "additionalProperties": false
}