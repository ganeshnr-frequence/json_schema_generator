{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "showPanelTitle": {
            "type": "boolean"
        },
        "showBudgetLabel": {
            "type": "boolean"
        },
        "budgetLabelText": {
            "type": "string"
        },
        "durationType": {
            "type": "string"
        },
        "validations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "message",
                    "type"
                ],
                "additionalProperties": false
            }
        },
        "displayName": {
            "type": "string"
        },
        "hasPrimaryColor": {
            "type": "boolean"
        }
    },
    "required": [
        "id"
    ],
    "additionalProperties": false
}