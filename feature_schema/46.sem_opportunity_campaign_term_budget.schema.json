{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "defaultValue": {
            "type": "object",
            "properties": {
                "duration": {
                    "type": "integer"
                },
                "budget": {
                    "type": "object",
                    "properties": {
                        "defaultBudget": {
                            "type": "string"
                        },
                        "minBudget": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "defaultBudget",
                        "minBudget"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "budget",
                "duration"
            ],
            "additionalProperties": false
        },
        "validations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "message",
                    "type"
                ],
                "additionalProperties": false
            }
        },
        "helpTextPrefixNote": {
            "type": "string"
        },
        "helpTextFootNote": {
            "type": "string"
        }
    },
    "additionalProperties": false
}