{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "duration": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "unit": {
                    "type": "integer"
                }
            },
            "required": [
                "type",
                "unit"
            ],
            "additionalProperties": false
        },
        "multiplierRange": {
            "type": "integer"
        },
        "headers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "value": {
                        "type": "string"
                    }
                },
                "required": [
                    "value"
                ],
                "additionalProperties": false
            }
        },
        "validations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "field": {
                        "type": "string"
                    },
                    "minValue": {
                        "type": "integer"
                    }
                },
                "required": [
                    "message",
                    "type"
                ],
                "additionalProperties": false
            }
        },
        "isTotalBudgetDisabled": {
            "type": "boolean"
        },
        "termBased": {
            "type": "boolean"
        }
    },
    "additionalProperties": false
}